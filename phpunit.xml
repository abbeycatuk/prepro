<phpunit bootstrap="test/bootstrap.php">

	<testsuites>

        <testsuite name="default">
            <directory>tests/unit</directory>
        </testsuite>
        
    </testsuites>
	
    <logging>
        <log type="coverage-html" target="artefact/coverage" title="Coverage" charset="UTF-8" yui="true" highlight="true" lowUpperBound="35" highLowerBound="70"/>
		<log type="coverage-clover" target="artefact/logs/clover.xml"/>
		<log type="junit" target="artefact/logs/junit.xml" logIncompleteSkipped="false"/>
    </logging>
        
</phpunit>
